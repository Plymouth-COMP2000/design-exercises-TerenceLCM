<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_guest_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Headline6"
            android:textColor="@color/md_theme_light_onSurface"
            app:layout_constraintEnd_toStartOf="@id/tv_reservation_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_reservation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RES-123456"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Caption"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_reservation_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="December 25, 2024 at 7:00 PM"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body2"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_guest_name" />

        <TextView
            android:id="@+id/tv_number_of_guests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2 guests"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body2"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_reservation_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

