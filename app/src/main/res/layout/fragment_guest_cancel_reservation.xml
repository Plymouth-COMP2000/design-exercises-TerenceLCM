<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:title="Cancel Reservation"
        app:titleTextColor="@color/md_theme_light_onSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel Reservation"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Headline5"
                android:textColor="@color/md_theme_light_onSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reservation_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/label_guest_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guest Name:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body2"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_guest_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/label_guest_name"
                        app:layout_constraintTop_toTopOf="@id/label_guest_name" />

                    <TextView
                        android:id="@+id/label_reservation_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Date:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body2"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_guest_name" />

                    <TextView
                        android:id="@+id/tv_reservation_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="December 25, 2024"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/label_reservation_date"
                        app:layout_constraintTop_toTopOf="@id/label_reservation_date" />

                    <TextView
                        android:id="@+id/label_reservation_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Time:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body2"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_reservation_date" />

                    <TextView
                        android:id="@+id/tv_reservation_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="7:00 PM"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/label_reservation_time"
                        app:layout_constraintTop_toTopOf="@id/label_reservation_time" />

                    <TextView
                        android:id="@+id/label_number_of_guests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Number of Guests:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body2"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_reservation_time" />

                    <TextView
                        android:id="@+id/tv_number_of_guests"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/label_number_of_guests"
                        app:layout_constraintTop_toTopOf="@id/label_number_of_guests" />

                    <TextView
                        android:id="@+id/tv_warning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Are you sure you want to cancel this reservation? This action cannot be undone."
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body2"
                        android:textColor="@color/md_theme_light_error"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_number_of_guests" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_confirm_cancellation"
                        style="@style/Widget.RestaurantApp.Button.Primary"
                        android:layout_marginTop="24dp"
                        android:text="Confirm Cancellation"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_warning" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

