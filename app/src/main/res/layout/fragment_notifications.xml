<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:title="Notifications"
        app:titleTextColor="@color/md_theme_light_onSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/ll_action_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Notifications Section -->
            <TextView
                android:id="@+id/tv_notifications_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Headline6"
                android:textColor="@color/md_theme_light_onSurface"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_notifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_notifications_section">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Push Notifications Switch -->
                    <TextView
                        android:id="@+id/tv_push_notifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Push Notifications"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toStartOf="@id/switch_push_notifications"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_push_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- App Icon Badge Switch -->
                    <TextView
                        android:id="@+id/tv_app_icon_badge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="App Icon Badge"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toStartOf="@id/switch_app_icon_badge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_push_notifications" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_app_icon_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_app_icon_badge" />

                    <!-- Lock Screen Notifications Switch -->
                    <TextView
                        android:id="@+id/tv_lock_screen_notifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Lock Screen Notifications"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toStartOf="@id/switch_lock_screen_notifications"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_app_icon_badge" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_lock_screen_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_lock_screen_notifications" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Preferences Section -->
            <TextView
                android:id="@+id/tv_preferences_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Preferences"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Headline6"
                android:textColor="@color/md_theme_light_onSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_notifications" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_preferences"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_preferences_section">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Menu Updates Switch -->
                    <TextView
                        android:id="@+id/tv_menu_updates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Menu Updates"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toStartOf="@id/switch_menu_updates"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_menu_updates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Payment Updates Switch -->
                    <TextView
                        android:id="@+id/tv_payment_updates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Payment Updates"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toStartOf="@id/switch_payment_updates"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_menu_updates" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_payment_updates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_payment_updates" />

                    <!-- Table Confirmation Switch -->
                    <TextView
                        android:id="@+id/tv_table_confirmation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Table Confirmation"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toStartOf="@id/switch_table_confirmation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_payment_updates" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_table_confirmation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_table_confirmation" />

                    <!-- Promotions Switch -->
                    <TextView
                        android:id="@+id/tv_promotions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Promotions"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Body1"
                        android:textColor="@color/md_theme_light_onSurface"
                        app:layout_constraintEnd_toStartOf="@id/switch_promotions"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_table_confirmation" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_promotions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_promotions" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/ll_action_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_discard"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="Discard"
            android:textColor="@color/md_theme_light_onError"
            app:backgroundTint="@color/md_theme_light_errorContainer"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_changes"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="Save Changes"
            android:textColor="@color/md_theme_light_onPrimary"
            app:backgroundTint="@color/md_theme_light_primary"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

